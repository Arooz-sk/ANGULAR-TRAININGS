        <script type="text/javascript">
                var app=angular.module("myModule",[]);  
    app.controller('firstController',function($scope){
        localStorage.setitem
        $scope.registered=[]

    $scope.addinfo=function (item) {
        var d=$scope.email
var g=$scope.password
var u=$scope.user
        $scope.registered.push({'user':u,'email':d ,'password':g});
            console.log($scope.registered)
        localStorage.setItem('userna',u)
        localStorage.setItem('gmail',d)
        localStorage.setItem('pass',g)
    }
});
